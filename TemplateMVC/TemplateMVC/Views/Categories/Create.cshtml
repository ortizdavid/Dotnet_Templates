@model TemplateMVC.Core.Models.Products.CreateCategoryViewModel;

@{
    Layout = "_Layout";
    ViewBag.Title = "Create Category"; 
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary("", "Please fix the following errors:")
    </div>
}

@Model

<form asp-controller="Categories" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        <label asp-for="CategoryName" class="control-label"></label>
        <input asp-for="CategoryName" type="text" class="form-control" aria-required="true" autofocus />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" type="text" class="form-control" aria-required="true"/>
    </div>

    <br>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-secondary">Reset</button>
    </div>
</form>