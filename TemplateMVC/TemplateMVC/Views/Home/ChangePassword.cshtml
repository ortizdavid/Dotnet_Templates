@model TemplateMVC.Core.Models.Auth.ChangePasswordViewModel;

@{
    Layout = "_Layout";
    ViewBag.Title = "Change Password";
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary(false, "Please fix the following errors:")
    </div>
}

<form asp-controller="Home" asp-action="ChangePassword" method="post">
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        <label asp-for="NewPassword" class="control-label"></label>
        <input asp-for="NewPassword" type="password" class="form-control" aria-required="true" />
    </div>

    <div class="form-group">
        <label asp-for="PasswordConfirmation" class="control-label"></label>
        <input asp-for="PasswordConfirmation" type="password" class="form-control" aria-required="true" />
    </div>

    <br>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-secondary">Reset</button>
    </div>
</form>