@{
    Layout = "_Layout";
    ViewBag.Title = "Upload Image";
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary("", "Please fix the following errors:")
    </div>
}

<form asp-controller="Home" asp-action="UploadImage" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        <label for="file" class="control-label">Image:</label>
        <input type="file" name="file" id="file" accept=".jpg,.jpeg,.png" class="form-control">
    </div>

    <br>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-secondary">Reset</button>
    </div>
</form>