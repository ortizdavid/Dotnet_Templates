@model TemplateMVC.Core.Models.Auth.UserData;

@{
    Layout = "_Layout";
    ViewBag.Title = "User Details";
}

<div class="card">
    <div class="card-body">
        <p><strong>User ID:</strong> @Model.UserId</p>
        <p><strong>User Name:</strong> @Model.UserName</p>
        <p><strong>Role:</strong> @Model.RoleName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Status:</strong> @(Model.IsActive ? "Active" : "Inactive")</p>
        <p><strong>Created At:</strong> @Model.CreatedAt</p>
        <p><strong>Updated At:</strong> @Model.UpdatedAt</p>
    </div>
    <div class="card-footer">
        <a class="btn btn-primary" href="/users">Back to List</a>
        <a class="btn btn-primary" href="/users/@Model.UniqueId/edit">Edit</a>
    </div>
</div>