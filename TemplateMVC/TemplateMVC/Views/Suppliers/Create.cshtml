@model TemplateMVC.Core.Models.Suppliers.CreateSupplierViewModel;

@{
    Layout = "_Layout";
    ViewBag.Title = "Create Supplier"; 
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary("", "Please fix the following errors:")
    </div>
}

<form asp-controller="Suppliers" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        <label asp-for="SupplierName" class="control-label"></label>
        <input asp-for="SupplierName" type="text" class="form-control" aria-required="true" autofocus />
    </div>
    <div class="form-group">
        <label asp-for="IdentificationNumber" class="control-label"></label>
        <input asp-for="IdentificationNumber" type="text" class="form-control" aria-required="true"/>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" type="email" class="form-control" aria-required="true"/>
    </div>
    <div class="form-group">
        <label asp-for="PrimaryPhone" class="control-label"></label>
        <input asp-for="PrimaryPhone" type="text" class="form-control" aria-required="true"/>
    </div>
    <div class="form-group">
        <label asp-for="SecondaryPhone" class="control-label"></label>
        <input asp-for="SecondaryPhone" type="text" class="form-control" aria-required="true"/>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" type="text" class="form-control" aria-required="true"/>
    </div>

    <br>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-secondary">Reset</button>
    </div>
</form>